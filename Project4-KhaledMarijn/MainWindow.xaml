<Window x:Class="Project4_KhaledMarijn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project4_KhaledMarijn"
        mc:Ignorable="d"
        Title="Stonk's Pizza" Height="450" Width="800">
    <Grid Background="Black" >
        <Image Source="background.jpg" Height="600"/>
        <Grid Height="350" Width="700" Background="White" Opacity="0.90">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Margin="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Firstname"/>
                        <TextBox Grid.Column="1" MinWidth="100"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Lastname"/>
                        <TextBox Grid.Column="1" MinWidth="100"/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Adres"/>
                        <TextBox Grid.Column="1" MinWidth="100"/>
                    </Grid>

                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Postcode - Plaats"/>
                        <TextBox Grid.Column="1"/>
                        <TextBox Grid.Column="2"/>
                    </Grid>

                    <ComboBox x:Name="gerechtCombo" Width="105" ScrollViewer.VerticalScrollBarVisibility="Visible">
                        <ComboBoxItem Tag="pasta" Content="Macaroni Bolognese"/>
                        <ComboBoxItem Tag="pasta" Content="Lasagne"/>
                        <ComboBoxItem Tag="pasta" Content="Spaghetti Vongole"/>
                        <ComboBoxItem Tag="pasta" Content="Fusilli Pesto"/>
                        <ComboBoxItem Tag="pasta" Content="Farfalle Gorgonzola"/>
                        <ComboBoxItem Tag="pizza" Content="Calzone"/>
                        <ComboBoxItem Tag="pizza" Content="Diavola"/>
                        <ComboBoxItem Tag="pizza" Content="Frutedimare"/>
                        <ComboBoxItem Tag="pizza" Content="Funghi"/>
                        <ComboBoxItem Tag="pizza" Content="Hawaii"/>
                        <ComboBoxItem Tag="pizza" Content="Margaritha"/>
                        <ComboBoxItem Tag="pizza" Content="Napolitana"/>
                        <ComboBoxItem Tag="pizza" Content="Peperone"/>
                        <ComboBoxItem Tag="pizza" Content="Prosciutto"/>
                        <ComboBoxItem Tag="pizza" Content="Tonno"/>
                        <ComboBoxItem Tag="pizza" Content="Quattrostagioni"/>
                    </ComboBox>

                    <Grid Grid.Row="4">
                        <TextBlock Text="Formaat" Visibility="Hidden"/>
                        <RadioButton GroupName="pizzaGrootte" x:Name="gerechtRadio25" Visibility="Hidden" Content="25 cm"/>
                        <RadioButton GroupName="pizzaGrootte" x:Name="gerechtRadio35" Visibility="Hidden" Content="35 cm"/>
                    </Grid>

                    <Grid Grid.Row="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Aantal (Max 99):"/>
                        <TextBox Grid.Column="1" HorizontalAlignment="Left" MinWidth="40" x:Name="gerechtAantal" Text="0" HorizontalContentAlignment="Center"/>
                    </Grid>

                    <StackPanel Orientation="Horizontal" Grid.Row="6">
                        <TextBlock Text="Totaalbedrag: "/>
                        <TextBlock x:Name="gerechtTotaal" Text="€0,00"/>
                    </StackPanel>

                    <Grid Grid.Row="7">
                        <Button Content="Toevoegen"/>
                    </Grid>
                </Grid>

                <!-- Besteloverzicht-->
                <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1">

                </Grid>
            </Grid>
            <!--Overzicht-->
            <StackPanel Width="220" HorizontalAlignment="Right" Margin="0,20,20,20">
                <TextBlock Margin="5,0,0,0" Text="Overzicht"/>
                <ListBox x:Name="Overzicht" Margin="0,5,0,0" Background="White" Height="230"/>
                <TextBlock x:Name="totaalPrijsOverzicht" Margin="0,5,0,0" TextAlignment="Right" Text="Totaal €0,00"/>
                <Button Margin="0,5,0,0" Content="Betalen"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
